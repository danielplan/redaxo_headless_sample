---
interface Props {
  articleId: number;
}

import { getRedaxoNavigation } from "../../lib/redaxo/structure";
const { articleId } = Astro.props;

const navigation = await getRedaxoNavigation(articleId);
---

<style lang="scss">
  header {
    padding: 20px 10px;
    display: flex;
    justify-content: space-between;
  }
  nav {
    ul {
      display: flex;
      flex-direction: row;
      list-style: none;
      padding: 0;
      margin: 0;
      li {
        margin-right: 1rem;
        a {
          text-decoration: none;
          color: #000;
        }
      }
    }
  }
</style>
<header>
  <div class="logo">Logo</div>
  <nav>
    <ul>
      {
        navigation.map((item: any) => (
          <li>
            <a href={item.url}>{item.name}</a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
